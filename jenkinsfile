pipeline {
    agent any 
    
    stages {

        stage ('Prepare Artifacts'){

            steps {
                sh '''
                zip -r user.zip
                '''

            }
        }

        stage('Upload Artifacts'){

            steps {
                sh'''
                  curl -v -u admin:admin --upload-file user.zip http://172.31.12.138:8081/repository/users/user.zip
                '''
            }
        }
    }
}